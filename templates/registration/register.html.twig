{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

{{ include("shared/headerconnexion.html.twig") }}
  
    <h1 class="text-6xl font-bold text-center mt-4 mb-6 ">Register</h1>

    <div class="w-96 place-content-center">
    {{ form_start(registrationForm,{'method': 'GET'}) }}

 
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
        {{ form_rest(registrationForm) }} 
    {{ form_end(registrationForm) }}

</div>

{% endblock %}
