
{% extends 'base.html.twig' %}

{% block title %}Admin {% endblock %}

{% block stylesheets %}
<link href="{{asset('CSS/headermin.css')}}" rel='stylesheet'/>
<link href="{{asset('CSS/boutton.css')}}" rel='stylesheet'/>
{% endblock %}


{% block body %}

{{ include("shared/headerOfAdmin.html.twig") }}

<h1 class="text-7xl text-center p-6  space-y-10  mt-6 bg-clip-text bg-gradient-to-r from-black to-gray-400  text-transparent text font-mono ">Welcome to admin center</h1>

<div class="flex justify-center space-x-12 mb-10">
  <button class="learn-more mt-10 "><a class="no-underline text-white" href="{{path('app_game', {})}}">CREATE NEW GAME</a></button>
  </div>

<div class="overflow-x-auto relative mt-4 p-20">
  <table class="w-full text-sm text-left text-gray-700 dark:text-gray-400">
      <thead class="text-xs  text-2xl font-bold text-gray-700 uppercase bg-gray-300 dark:bg-gray-700 dark:text-gray-400">
          <tr>
              <th scope="col" class="py-3 px-6">
              Index
              </th>
              <th scope="col" class="py-3 px-6">
                  Title
              </th>
              <th scope="col" class="py-3 px-6">
                  Image
              </th>
              <th scope="col" class="py-3 px-6">
                  Prix
              </th>
              <th scope="col" class="py-3 px-6">
                Type
            </th>
              <th scope="col" class="py-3 px-6">
                Modifier
            </th>
            <th scope="col" class="py-3 px-6">
              Supprimer
          </th>
          </tr>
      </thead>

      {% for element in all %} 

      <tbody>
        <tr class="bg-white border-b border-gray-800 dark:bg-gray-800 ">
            <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white  text-2xl font-bold">
              {{loop.index-1}}
            </th>
            <td class="py-4 px-6 text-2xl font-bold">
              {{element.getTitle}}
            </td>
            <td class="py-4 px-6">
              <img class="h-52 w-52 mt-4 mb-10 rounded object-cover object-center animate-pulse" src="{{element.getImage}}" /> 
            </td>
            <td class="py-8 px-6  text-2xl font-bold ">
              {{element.getPrice}}â‚¬
            </td>

            <td class="py-4 px-6  text-2xl font-bold">
              {{element.getTypeOfGame}}
            </td>
            <td class="py-4 px-6">
              <button class="bg-transparent text-blue-700 font-semibold hover:text-black py-2 px-4 border border-gray-800 ">
                <a class="no-underline text-blue-700 font-bold" href="{{path('gameedit', {'id' : element.getId})}}" class="px-4 py-2 text-sm rounded  ">Modifier</a>
              </button>
              
            </td>

            <td class="py-4 px-6 ">

              <button class="bg-transparent font-semibold hover:text-black py-2 px-4 border border-gray-800 rounded ">
                <a class="no-underline  text-red-800 font-bold border border-gray-800" href="{{path('gamedel', {'id' : element.getId})}}" class="px-4 py-2 text-sm rounded  ">Supprimer</a>
              </button>
            </td>
        </tr>
</tbody>

{% endfor %}
</table>
</div>



<style>
  .text{
    animation: slide-in-anim 1.5s ease-out forwards;
    transform: translateX(-200%);
    font-family: 'Open Sans', sans-serif;
  }
  
  @keyframes slide-in-anim {
    20% {
      opacity: 0;
    }
    60% {
      transform: translateX(-70%);
    }
    75% {
      transform: translateX(32%);
    }
    100% {
      opacity: 1;
      transform: translateX(3%);
    }
  }
</style>
      
{% endblock %}

