{% extends 'base.html.twig' %}

{% block title %}Hello GameController!{% endblock %}


{% block stylesheets %}
<style>
    .banne {
        background: url( '{{une.image}}' );
        background-repeat: no-repeat;
        background-position: center;   
        background-size: cover;
        image-rendering: auto;
        image-rendering: crisp-edges;
        image-rendering: pixelated;
        image-rendering: -webkit-optimize-contrast;
    
    }
</style>

<link href="{{asset('CSS/headermin.css')}}" rel='stylesheet'/>

{% endblock %}

{% block body %}

{{ include("shared/adminCreateadminUpdate.html.twig") }}


{{ form_start(formedit,{'method': 'POST'}) }}

<div class='grid grid-cols-12 '>
        <div class="col-span-4 text-white font-sans font-bold bg-white min-h-screen pl-14">
            <div class="grid grid-rows-6 grid-flow-col min-h-screen items-center justify-items-start ">
                <div class="row-span-4 row-start-2 text-4xl">
                    <h1 class="text-4xl text-black uppercase font-bold -mt-48"> Formulaire de modification d'un produit : </h1>
                    <div class="my-custom-class-for-errors">
                        {{ form_errors(formedit) }}
                    </div>                   
                    <div class="pt-10 pr-20 text-black">                        
                        {{ form_row(formedit.title) }}
                    </div>
                    <div class="pt-2 pr-20 text-black">
                        {{ form_row(formedit.developmentIndustry) }}
                    </div>


                    <div class="pt-2 pr-20 text-black">
                        {{ form_row(formedit.TypeOfGame) }}
                    </div>


                    <div class="pt-2 pr-20 text-black">
                        {{ form_row(formedit.description) }}
                    </div>

                    <div class="pt-2 pr-20 text-black">
                        {{ form_row(formedit.image) }}
                    </div>

                    <div class="pt-2 pr-20 text-black">
                        {{ form_row(formedit.price) }}
                    </div>

                    <div class="pt-2 pr-20 text-black">
                        {{ form_row(formedit.date) }}
                    </div>

                    <div class=" place-content-center mt-8 animate-bounce">
                        {{ form_row(formedit.save, { 'label': 'EDIT ME' }) }}
                    </div>
                </div>
            </div>  
            {{ form_rest(formedit) }}       
        </div>


        <div class="banne col-span-8 text-white font-sans font-bold ">

        </div>    
</div>

{{ form_end(formedit) }}



{% endblock %}