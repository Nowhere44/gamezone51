        <div class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            {{ form_row(form.description) }}
        </div>

        <div class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            {{ form_row(form.image) }}
        </div>

        <div class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            {{ form_row(form.price) }}
        </div>

        <div class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            {{ form_row(form.date) }}
        </div>

        <div class="rounded mt-4 font-bold flex animate-bounce place-content-center ">
            {{ form_row(form.save, { 'label': 'CREATE ME' }) }}
        </div>
        {{ form_rest(form) }}
