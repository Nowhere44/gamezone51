{% extends './base.html.twig' %}
{% block title %}Resultat Recherche{% endblock %}

{% block stylesheets %}
<link href="{{asset('CSS/homepa.css')}}" rel="stylesheet" />
<link href="{{asset('CSS/boutton.css')}}" rel="stylesheet" />
{% endblock %}


{% block body %}
{{ include("shared/headerconnexion.html.twig") }}



{% if searchResults is defined %}
  {% if searchResults|length > 0 %}
  
  <h1 class="text-7xl text-center p-6  space-y-10  mt-6 bg-clip-text bg-gradient-to-r from-black to-gray-400  text-transparent text font-mono ">Les résultats de votre recherche sont les suivantes : </h1>

  <section class="grid grid-cols-3 gap-4">
    {% for element in searchResults %} 

    <div class="wrapper">
    <article class="-mt-44">
        <picture class="backdrop"><img src=""></picture>
        <div class="front">
          <div class="info-backdrop"></div>
          <img src="{{element.getImage}}">
          
          <div class="info">
            <h1 class='font-bold mt-6 font-extrabold text-transparent text-6xl bg-clip-text bg-gradient-to-r from-black to-gray-400'>{{element.getTitle}}</h1>    
    <div class="flex space-x-2 justify-center ">
      <h1 class='text-5xl font-bold mt-6'>Type : </h1>
            <h1 class='text-5xl text-gray-500 font-bold mt-6'> {{element.getTypeOfGame}}</h1>
    
    </div>
    
            <h2 class="font-bold">{{element.getPrice}} €</h2>
            <button class="learn-more mt-6"><a class="no-underline text-white" href="{{path('once', {'id' : element.getId})}}">PLUS DE DETAILS</a></button>
           </div>
    
          </div>
    
    
      </article>
    
    
    
    </div>
    {% endfor %}


  {% else %}
  {{ form_start(search,{'method': 'POST'}) }}
  <div class="">
    <div class="xl:w-96">
  
      <div class="input-group relative grid grid-cols-2 gap-2 ">
         <div>{{ form_row(search.title,{ 'label': ' ' }) }}</div>
         <div class="mt-8 animate-bounce">{{ form_row(search.save, { 'label': 'SEARH', 'class': 'btn bg-gray-800 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-gray-800 hover:shadow-lg focus:bg-gray-800  focus:shadow-lg focus:outline-none focus:ring-0 active:bg-gray-800 active:shadow-lg transition duration-150 ease-in-out mt-6 " type="button" id="button-addon2' }) }}</div>
      </div>
  
         <div class="my-custom-class-for-errors">
          {{ form_errors(search) }}
      </div>  
  
      </div>
    </div>
  </div>       
  {{ form_rest(search) }} 
  {{ form_end(search) }}

  {% endif %}
{% endif %}


{% endblock %}
